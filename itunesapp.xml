<?xml version="1.0" encoding="utf-8"?>
<install version="2.5"
         type="plugin"
         group="system"
         method="upgrade">
	<name>System - iTunes App</name>
	<author>Matt Thomas</author>
	<creationDate>October 28, 2013</creationDate>
	<copyright>2013 Matt Thomas</copyright>
	<license>GPL 2.0</license>
	<authorEmail></authorEmail>
	<authorUrl>http://www.betweenbrain.com</authorUrl>
	<version>0.1</version>
	<description></description>

	<files>
		<filename plugin="itunesapp">itunesapp.php</filename>
		<folder>elements</folder>
	</files>

	<languages>
		<language tag="en-GB">en-GB.plg_system_itunesapp.ini</language>
	</languages>

	<params addpath="/plugins/system/elements">
		<param name="appId"
		       type="text"
		       default="600046331"
		       label="PLG_ITUNESAPP_APP_ID_LABEL"
		       description="PLG_ITUNESAPP_APP_ID_DESC"/>
		<param name="appArg"
		       type="text"
		       default="http://www.guggenheim.org/new-york/visit/app"
		       label="PLG_ITUNESAPP_APP_ARG_LABEL"
		       description="PLG_ITUNESAPP_APP_ARG_DESC"/>
		<param name="menuItems"
		       type="menuitems"
		       label="PLG_ITUNESAPP_APP_MENU_ITEMS_LABEL"
		       description="PLG_ITUNESAPP_APP_MENU_ITEMS_DESC"/>
	</params>

	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="appId"
				       type="text"
				       default="600046331"
				       label="PLG_ITUNESAPP_APP_ID_LABEL"
				       description="PLG_ITUNESAPP_APP_ID_DESC"/>
				<field name="appArg"
				       type="text"
				       default="http://www.guggenheim.org/new-york/visit/app"
				       label="PLG_ITUNESAPP_APP_ARG_LABEL"
				       description="PLG_ITUNESAPP_APP_ARG_DESC"/>
				<param name="menuItems"
				       type="menuitem"
				       multiple="true"
				       size="25"
				       label="PLG_ITUNESAPP_APP_MENU_ITEMS_LABEL"
				       description="PLG_ITUNESAPP_APP_MENU_ITEMS_DESC"/>
			</fieldset>
		</fields>
	</config>

</install>